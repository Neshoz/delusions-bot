{
  "compilerOptions": {
    "esModuleInterop": true,
    "alwaysStrict": true,
    "strict": true,
    "module": "commonjs",
    "target": "ES6",
    "lib": ["es6", "es2017"],
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "outDir": "dist",
    "moduleResolution": "node"
  },
  "include": ["src/**/*"]
}
